{
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "babel",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false,
    "overrides": [
        {
            "files": ".prettierrc",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ["**/*.js", "**/*.json", "**/*.ts"],
            "options": {
                "tabWidth": 4,
                "parser": "typescript"
            }
        },
        {
            "files": ["**/*.html", "**/*.css", "**/*.scss"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
